    $('#viewmore-chuongtrinh').click(function () { 
        if ($(this).text() == 'Xem thêm') {
            $(this).text('Thu gọn');
            $('.list-toggle-hidden').removeClass('hidden');
        } else {
            $(this).text('Xem thêm');
            $('.list-toggle-hidden').addClass('hidden');
        } 
    })
